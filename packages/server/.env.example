# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Database
# SQLite (default for development)
DATABASE_URL=./fortress.db
# PostgreSQL example: postgresql://user:password@localhost:5432/fortressauth
# MySQL example: mysql://user:password@localhost:3306/fortressauth

# Public URL (used for email links)
BASE_URL=http://localhost:3000

# Security
COOKIE_SECURE=false
COOKIE_SAMESITE=strict
# COOKIE_DOMAIN=

# CSRF Protection
CSRF_COOKIE_NAME=fortress_csrf
CSRF_COOKIE_SECURE=false
CSRF_COOKIE_SAMESITE=lax
# CSRF_COOKIE_DOMAIN=
CSRF_HEADER_NAME=x-csrf-token
CSRF_TOKEN_TTL_MS=7200000

# Breached Password Checks (Have I Been Pwned)
BREACHED_PASSWORD_CHECK=false
# BREACHED_PASSWORD_API_URL=https://api.pwnedpasswords.com
# BREACHED_PASSWORD_TIMEOUT_MS=5000

# Logging
LOG_LEVEL=info

# CORS (comma-separated origins)
# When not set, defaults to: BASE_URL origin, localhost:3000, localhost:3001, localhost:5173, localhost:5174
# For production, explicitly set your allowed origins:
# CORS_ORIGINS=https://myapp.com,https://www.myapp.com
#
# For development with multiple frontend apps:
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4200
#
# Note: The server uses credentials: true, so client apps must use credentials: 'include' in fetch requests.
# All FortressAuth web SDKs (React, Vue, Svelte, Angular) handle this automatically.
# CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# Redis (optional, for distributed rate limiting)
# REDIS_URL=redis://localhost:6379

# Metrics
METRICS_ENABLED=true

# Email Provider Configuration
# Options: 'console' (logs to terminal), 'resend', 'ses', 'sendgrid', 'smtp'
EMAIL_PROVIDER=console

# Resend Configuration (required when EMAIL_PROVIDER=resend)
# Get your API key at https://resend.com
# RESEND_API_KEY=re_xxxxxxxxxxxxx
# EMAIL_FROM_ADDRESS=noreply@yourdomain.com
# EMAIL_FROM_NAME=Your App Name

# AWS SES Configuration (required when EMAIL_PROVIDER=ses)
# SES_REGION=us-east-1
# SES_FROM_ADDRESS=noreply@yourdomain.com
# SES_FROM_NAME=Your App Name
# SES_ACCESS_KEY_ID=AKIA...
# SES_SECRET_ACCESS_KEY=...
# SES_SESSION_TOKEN=...

# SendGrid Configuration (required when EMAIL_PROVIDER=sendgrid)
# SENDGRID_API_KEY=SG.xxxxx
# SENDGRID_FROM_ADDRESS=noreply@yourdomain.com
# SENDGRID_FROM_NAME=Your App Name

# SMTP Configuration (required when EMAIL_PROVIDER=smtp)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=smtp_user
# SMTP_PASS=smtp_password
# SMTP_FROM_ADDRESS=noreply@yourdomain.com
# SMTP_FROM_NAME=Your App Name
# SMTP_TLS_REJECT_UNAUTHORIZED=true
# SMTP_TLS_SERVERNAME=smtp.example.com
